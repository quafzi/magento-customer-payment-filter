<config>
    <modules>
        <Quafzi_CustomerPaymentFilter>
            <version>0.1.0</version>
        </Quafzi_CustomerPaymentFilter>
    </modules>
    <global>
        <blocks>
            <customerpaymentfilter>
                <class>Quafzi_CustomerPaymentFilter_Block</class>
            </customerpaymentfilter>
            <adminhtml>
                <rewrite>
                    <!-- overwrite Mage_Adminhtml_Block_Customer_Grid to add denied payment methods to grid -->
                    <customer_grid>Quafzi_CustomerPaymentFilter_Block_Adminhtml_Customer_Grid</customer_grid>
                </rewrite>
            </adminhtml>
        </blocks>
        <models>
            <customerpaymentfilter>
                <class>Quafzi_CustomerPaymentFilter_Model</class>
            </customerpaymentfilter>
        </models>
        <resources>
            <customerpaymentfilter_setup>
                <setup>
                    <module>Quafzi_CustomerPaymentFilter</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customerpaymentfilter_setup>
        </resources>
    </global>
    <frontend>
        <events>
            <payment_method_is_active>
                <observers>
                    <customerpaymentfilter>
                        <type>singleton</type>
                        <class>customerpaymentfilter/observer</class>
                        <method>paymentMethodIsAllowed</method>
                    </customerpaymentfilter>
                </observers>
            </payment_method_is_active>
        </events>
    </frontend>
</config>
